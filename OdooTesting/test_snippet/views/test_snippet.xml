<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- No Menu: -->
    <template id="s_test_snippet_place_in_tab" inherit_id="website.snippets">
        
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]/t" position="before">
            <t t-snippet="test_snippet.test_snippet_t" t-thumbnail="/website/static/src/img/blocks/block_comparison.png" />
        </xpath>
        
    </template>
    
    
    <template id="test_snippet_t" name="My (JJ) Test Snippet">
        <section class="jumbotron s_button bg-gray-lighter">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <p class="mb0">
                            <strong>50,000+ companies run Odoo to grow their businesses.</strong>
                        </p><p class="mb0">
                            Join us and make your company a better place.
                        </p>
                    </div>
                    <div class="col-md-3">
                        <a href="/contactus" class="btn btn-primary btn-lg pull-right mt8">
                            <span>Contact Us New</span>
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>
